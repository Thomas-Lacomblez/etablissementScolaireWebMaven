pipeline {
    agent any
    tools {
        maven 'maven-3.8.1'
        jdk 'jdk-11'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo $PATH
                    echo $M2_HOME
                '''
            }
        }

        stage ('Build') {
            steps {
                    sh 'mvn install'
            }
             post {
                success {
                    junit 'target/surefire-reports/*.xml'
                        }
                 }         
            }
        }
}
